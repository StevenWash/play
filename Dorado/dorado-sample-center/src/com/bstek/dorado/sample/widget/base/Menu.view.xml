      <ClientEvent name="onClick">alert('');
</ClientEvent>
      <MenuItem>
        <Property name="caption">Bstek</Property>
        <Property name="userData">http://www.bstek.com</Property>
        <Property name="tags">bookmark</Property>
        <Property name="iconClass">fa fa-globe</Property>
      </MenuItem>
      <MenuItem>
        <Property name="caption">Bsdn</Property>
        <Property name="userData">http://www.bsdn.org</Property>
        <Property name="tags">bookmark</Property>
        <Property name="iconClass">fa fa-globe</Property>
