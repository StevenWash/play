<?xml version="1.0" encoding="UTF-8"?>
<ViewConfig meta="clientType:touch">
  <Arguments/>
  <Context/>
  <Model/>
  <View layout="native padding:20">
    <TouchButton>
      <ClientEvent name="onClick">dorado.MessageBox.alert(&quot;Hello World!&quot;)&#xD;
</ClientEvent>
      <Property name="caption">提示</Property>
      <Property name="style">
        <Property name="margin">2px</Property>
      </Property>
    </TouchButton>
    <TouchButton>
      <ClientEvent name="onClick">dorado.MessageBox.confirm(&quot;Are you sure?&quot;)&#xD;
</ClientEvent>
      <Property name="caption">确认</Property>
      <Property name="style">
        <Property name="margin">2px</Property>
      </Property>
    </TouchButton>
    <TouchButton>
      <ClientEvent name="onClick">dorado.MessageBox.prompt(&quot;Please input something...&quot;, function(text) {&#xD;
	if (text) dorado.MessageBox.alert(text);&#xD;
});&#xD;
</ClientEvent>
      <Property name="caption">输入</Property>
      <Property name="style">
        <Property name="margin">2px</Property>
      </Property>
    </TouchButton>
    <TouchButton>
      <ClientEvent name="onClick">dorado.MessageBox.promptMultiline(&quot;Please input something...&quot;, function(text) {&#xD;
	if (text) dorado.MessageBox.alert(text);&#xD;
});&#xD;
</ClientEvent>
      <Property name="caption">多行文本输入</Property>
      <Property name="style">
        <Property name="margin">2px</Property>
      </Property>
    </TouchButton>
  </View>
</ViewConfig>
